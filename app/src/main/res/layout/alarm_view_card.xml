<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/alarm_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:padding="14dp">

            <ImageView
                android:id="@+id/person_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/alarmicon" />

            <TextView
                android:id="@+id/alarm_card_pair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/alarm_card_market"
                android:layout_marginRight="30dp"
                android:text="@string/hello_world"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/alarm_card_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alarm_card_pair"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/person_photo"
                android:text="My name jeff"
                android:textColor="@color/secondaryTextColor"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/alarm_card_res"
                android:layout_alignBottom="@+id/alarm_card_res"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/alarm_card_pair"
                android:text="@string/alarmcard_resistance_text"
                android:textColor="@color/secondaryTextColor"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/alarm_card_pair"
                android:text="@string/alarmcard_support_text"
                android:textColor="@color/secondaryTextColor"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/alarm_card_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/alarm_card_pair"
                android:layout_marginEnd="14dp"
                android:text="TextView"
                android:textColor="@color/md_green_600"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/alarm_card_sup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignStart="@+id/alarm_card_res"
                android:text="TextView"
                android:textColor="@color/md_red_600"
                android:textSize="10sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>