<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:colorBackground">@color/primaryColor</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
        <item name="android:textColorPrimaryInverse">@color/backgroundColor</item>
        <item name="android:textColorSecondaryInverse">@color/hintBlack</item>
    </style>

</resources>
